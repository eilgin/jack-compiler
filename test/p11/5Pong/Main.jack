/**
 * The main class of the Pong game.
 */
class Main {

    /** Initializes the Pong game and starts it. */
    function void main() {
        var PongGame game;

	do PongGame.newInstance();
        let game = PongGame.getInstance();
        do game.run();
	do game.dispose();

        return;
    }
}
